<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Nee Socks -->
  <ThingDef ParentName="AS_WHE_ApparelNoColorBase">
    <defName>AS_WHE_Neeso</defName>
    <description>皮や布で作られたニーソックス。</description>
    <label>ニーソックス</label>
    <techLevel>Neolithic</techLevel>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Basic</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>WHE/Apparels/stocking/NeeSo</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>40</Cloth>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.1</Mass>
      <StuffEffectMultiplierArmor>0.03</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <!-- <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker> -->
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/stocking/NeeSo</wornGraphicPath>
      <layers>
        <li>AS_Stocking</li>
      </layers>
      <tags>
        <li>AS_WHE_Colonist</li>
		    <li>AS_WHE_Vllager</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- Stripe Nee Socks -->
