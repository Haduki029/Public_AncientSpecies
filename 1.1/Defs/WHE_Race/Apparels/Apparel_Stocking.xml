    </recipeMaker> -->
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/stocking/StripeNeeSo</wornGraphicPath>
      <layers>
        <li>AS_Stocking</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>