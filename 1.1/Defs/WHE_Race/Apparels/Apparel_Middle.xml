<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Cape -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_Cape</defName>
    <description>皮や布で作られた肩掛け。寒さと攻撃から身を守ります。</description>
    <label>ケープ</label>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Elementary</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>WHE/Apparels/middle/Cape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>7000</WorkToMake>
      <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
      <Mass>4</Mass>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/Cape</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

