<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Maid Ware -->
  <ThingDef ParentName="AS_WHE_ApparelNoColorBase">
    <defName>AS_WHE_MaidWare</defName>
    <description>軽く、丈夫なメイド服。ロングスカートのゆったりとした、シックなデザインなっている。少しだけ移動速度と作業速度が上がる。</description>
    <label>メイド服</label>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Intermediate</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>WHE/Apparels/undermiddle/MaidWare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>150</Cloth>
      <Steel>10</Steel>
      <Plasteel>10</Plasteel>
    </costList>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>0.28</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
      <Flammability>0.8</Flammability>
    </statBases>
    <equippedStatOffsets>
			<MoveSpeed>0.1</MoveSpeed>
			<WorkSpeedGlobal>0.1</WorkSpeedGlobal>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
		    <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/undermiddle/MaidWare</wornGraphicPath>
      <layers>
        <li>AS_UnderMiddle</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- ボタンシャツ -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_ShirtButton</defName>
    <description>ボタンシャツ</description>
    <label>ボタンシャツ</label>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Elementary</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>WHE/Apparels/underwear/AS_WHE_shirtbutton</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>110</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.28</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/underwear/AS_WHE_shirtbutton</wornGraphicPath>
      <layers>
        <li>AS_UnderMiddle</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>