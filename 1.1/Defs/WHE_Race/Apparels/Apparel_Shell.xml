    <label>ハーフエルフ式マリーンアーマー</label>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/MarineArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>50</Plasteel>
      <Uranium>12</Uranium>
    </costList>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>360</MaxHitPoints>
      <WorkToMake>65000</WorkToMake>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>1.10</StuffEffectMultiplierArmor>
