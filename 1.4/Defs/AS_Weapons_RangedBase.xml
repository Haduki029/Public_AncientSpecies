<?xml version='1.0' encoding='utf-8'?>
<Defs>
    <!-- Ancient Technology -->
    <ThingDef Name="AS_AT_MakeableGun" ParentName="BaseMakeableGun" Abstract="True">
        <thingCategories>
            <li>AS_Weapons</li>
            <li>AS_AT_Items</li>
        </thingCategories>
        <weaponTags Inherit="false">
            <li>AS_AT_MakeableGun</li>
        </weaponTags>
        <comps>
            <li Class="CompProperties_Biocodable"/>
        </comps>
    </ThingDef>

    <ThingDef Name="AS_AT_MakeableBow" ParentName="BaseWeapon" Abstract="True">
        <thingCategories>
            <li>AS_Weapons</li>
            <li>AS_AT_Items</li>
        </thingCategories>
        <weaponTags Inherit="false">
            <li>AS_AT_MakeableBow</li>
        </weaponTags>
        <burnableByRecipe>true</burnableByRecipe>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Biocodable"/>
        </comps>
        <relicChance>1</relicChance>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <effectWorking>Smelt</effectWorking>
            <soundWorking>Recipe_MakeBow</soundWorking>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
        </recipeMaker>
    </ThingDef>

