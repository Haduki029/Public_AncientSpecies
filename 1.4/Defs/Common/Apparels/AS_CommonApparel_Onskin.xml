<?xml version='1.0' encoding='utf-8'?>
<Defs>
    <ThingDef Name="AS_CommonApparelBase_Onskin" ParentName="AS_ApparelCommonBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Waist</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <tradeability>All</tradeability>
        <tradeTags>
          <li>AS_BasicClothing</li>
        </tradeTags>
    </ThingDef>

    <ThingDef ParentName="AS_CommonApparelBase_Onskin">
      <defName>AS_Common_Tribal</defName>
      <description>原始的なツールを使って作られた衣服です。僅かですが断熱効果があります。</description>
      <label>一枚布（ハーフエルフ）</label>
      <techLevel>Neolithic</techLevel>
      <graphicData>
        <texPath>Apparels/Common/onskin/RagCloth</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>1.2</drawSize>
      </graphicData>
      <costStuffCount>45</costStuffCount>
      <stuffCategories>
        <li>Fabric</li>
        <li>Leathery</li>
      </stuffCategories>
      <statBases>
        <MaxHitPoints>100</MaxHitPoints>
        <WorkToMake>1800</WorkToMake>
        <Mass>0.5</Mass>
        <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
        <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
        <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
        <EquipDelay>1.5</EquipDelay>
      </statBases>
      <recipeMaker>
        <recipeUsers Inherit="False">
          <li>CraftingSpot</li>
          <li>ElectricTailoringBench</li>
          <li>HandTailoringBench</li>
        </recipeUsers>
      </recipeMaker>
      <apparel>
        <wornGraphicPath>Apparels/Common/onskin/RagCloth</wornGraphicPath>
        <tags>
          <li>AS_Common_Apparel</li>
          <li>AS_BasicClothing</li>
          <li>AS_BasicOnSkin</li>
        </tags>
        <defaultOutfitTags>
          <li>Worker</li>
        </defaultOutfitTags>
      </apparel>
    </ThingDef>

</Defs>