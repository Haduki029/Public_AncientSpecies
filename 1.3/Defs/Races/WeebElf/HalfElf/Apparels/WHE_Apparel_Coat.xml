  <ThingDef Class="AS_WHE.CustomThingDef" ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_Cape</defName>
    <description>皮や布で作られた肩掛け。寒さと攻撃から身を守ります。</description>
    <label>ケープ（ハーフエルフ）</label>
    <tradeTags><li>AS_WHE_Apparel</li></tradeTags>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/shell/Cape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <followStuffColor>true</followStuffColor>
    <costStuffCount>140</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
