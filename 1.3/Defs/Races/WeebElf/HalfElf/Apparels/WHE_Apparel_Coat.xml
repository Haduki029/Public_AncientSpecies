      <wornGraphicPath>WHE/Apparels/shell/Cape</wornGraphicPath>
      <layers>
        <li>AS_Coat</li>
      </layers>
      <tags>
        <li>WHE_Medieval</li>
        <li>WHE_Industrial</li>
        <li>AS_WHE_Knight</li>
        <li>AS_WHE_MidleLevel_Apparel</li>
        <li>AS_WAE_HK_LowArmor</li>
