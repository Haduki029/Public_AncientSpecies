<?xml version='1.0' encoding='utf-8'?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Kurin_Gun_Gauss_Rifle</defName>
        <label>kurin gauss rifle</label>
        <description>テスト実装。●●社により開発された最新型のレールガン。</description>

        <thingCategories>
            <li>AS_Weapons</li>
            <li>AS_WHE_Weapons</li>
        </thingCategories>

        <weaponTags Inherit="false">
            <li>AS_WHE_Ranged</li>
            <li>AS_WHE_T5Ranged</li>
        </weaponTags>

        <graphicData>
            <texPath>WHE/Weapons/T5/Railgun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>

        <equippedAngleOffset>45</equippedAngleOffset>
        <soundInteract>AS_Sound_Railgun_Interact</soundInteract>
        <costList>
            <Plasteel>120</Plasteel>
            <Steel>250</Steel>
            <ComponentSpacer>8</ComponentSpacer>
        </costList>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <!-- <WorkToMake>52000</WorkToMake> -->
            <WorkToMake>120</WorkToMake>
            <Mass>10.5</Mass>
            <AccuracyTouch>0.45</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>1.05</AccuracyMedium>
            <AccuracyLong>1.05</AccuracyLong>
            <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
        </statBases>

        <recipeMaker>
            <researchPrerequisite>AS_WHE_ATWeaponCustomizationResearch</researchPrerequisite>
            <skillRequirements>
                <Crafting>15</Crafting>
            </skillRequirements>
        </recipeMaker>
        <thingSetMakerTags>
            <li>AS_WHE_CC_T5_Weapon</li>
        </thingSetMakerTags>
        <weaponClasses>
            <li>LongShots</li>
            <li>RangedHeavy</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>AS_WHE_Bullet_Railgun</defaultProjectile>
                <warmupTime>3.5</warmupTime>
                <range>52.9</range>
                <burstShotCount>1</burstShotCount>
				<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
                <soundCast>AS_Sound_Railgun_Interact</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>3</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>AS_WHE_Bullet_Railgun</defName>
        <label>railgun bullet made by ●● company </label>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>34</damageAmountBase>
            <armorPenetrationBase>0.85</armorPenetrationBase>
            <stoppingPower>1.5</stoppingPower>
            <speed>130</speed>
        </projectile>
        <graphicData>
            <texPath>WHE/Projectile/Railgun_Bullet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Graphic_Random</shaderType>
            <drawSize>0.2</drawSize>
        </graphicData>
    </ThingDef>

</Defs>