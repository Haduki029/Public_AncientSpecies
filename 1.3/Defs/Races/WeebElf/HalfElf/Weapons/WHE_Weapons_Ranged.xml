        </li>
        </verbs>
        <tools>
            <li>
                <label>limb</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>11.8</power>
                <cooldownTime>2.1</cooldownTime>
            </li>
        </tools>
        <generateCommonality>0</generateCommonality>
        <recipeMaker>
            <researchPrerequisite>AS_WHE_Weapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>16</Crafting>
            </skillRequirements>
        </recipeMaker>
    </ThingDef>

