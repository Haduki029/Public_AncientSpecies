<?xml version='1.0' encoding='utf-8'?>
<Defs>
    <ThingDef Name="WHE_BaseWeapon" Abstract="True" ParentName="BaseWeapon">
        <thingCategories>
            <li>AS_Weapons</li>
            <li>AS_WHE_Weapons</li>
        </thingCategories>
        <burnableByRecipe>true</burnableByRecipe>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <effectWorking>Smelt</effectWorking>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
        </recipeMaker>
    </ThingDef>

    <ThingDef Name="WHE_BaseWeaponNeolithic" Abstract="True" ParentName="WHE_BaseWeapon">
        <techLevel>Neolithic</techLevel>
    </ThingDef>

    <ThingDef Name="WHE_BaseWeaponIndustrial" Abstract="True" ParentName="WHE_BaseWeapon">
        <techLevel>Industrial</techLevel>
    </ThingDef>

    <ThingDef Name="WHE_BaseWeaponSpacer" Abstract="True" ParentName="WHE_BaseWeapon">
        <techLevel>Spacer</techLevel>
    </ThingDef>

    <ThingDef ParentName="WHE_BaseWeaponNeolithic">
        <defName>WHE_ElvenBow</defName>
        <!-- TODO: <defName>AS_WHE_HalfElvenBow</defName> -->
        <label>ASハーフエルブンボウ</label>
        <description>古代エルフが使っていた弓のレプリカ版です。古代エルフの弓には劣りますが、一般的な弓より強力で、連射性能があります。</description>
        <weaponTags Inherit="false">
            <li>AS_WHE_Ranged</li>
            <li>AS_WHE_NeolithicRanged</li>
            <li>AS_WHE_LowRanged</li>
        </weaponTags>
        <graphicData>
            <texPath>WHE/Weapons/bow/HalfElvenBow</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <onGroundRandomRotateAngle>30</onGroundRandomRotateAngle>
            <drawSize>1.3</drawSize>
			<drawOffset>0,0,0</drawOffset>
        </graphicData>
        <soundInteract>Bow_Large</soundInteract>
        <costList>
            <WoodLog>120</WoodLog>
            <Plasteel>2</Plasteel>
            <Cloth>2</Cloth>
        </costList>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.75</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.85</AccuracyMedium>
            <AccuracyLong>0.65</AccuracyLong>
            <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>AS_WHE_HalfElvenArrow</defaultProjectile>
                <warmupTime>1.35</warmupTime>
                <range>31</range>
                <soundCast>Bow_Large</soundCast>
            </li>
        </verbs>
        <tools>
        <li>
            <label>limb</label>
            <capacities>
            <li>Blunt</li>
            <li>Poke</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
        </li>
        </tools>
        <generateCommonality>0.2</generateCommonality>
        <recipeMaker>
            <recipeUsers>
                <li>CraftingSpot</li>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <researchPrerequisite>AS_WHE_HalfElvenBowResearch</researchPrerequisite>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="WHE_BaseWeaponIndustrial">
        <defName>WHE_CompoundBow</defName>
        <!-- TODO: <defName>AS_WHE_CompoundBow</defName> -->
        <label>ASコンパウンドボウ</label>
        <description>ハーフエルフの技術と、滑車やてこの原理などを用いて作られた大型の半機械弓。連射性能、飛距離、命中精度、威力どれも高いが、接近戦での取り回しが悪い。カーボン製の矢を使用しており、高い貫通力を誇る。</description>
        <weaponTags Inherit="false">
            <li>AS_WHE_Ranged</li>
            <li>AS_WHE_IndustrialRanged</li>
            <li>AS_WHE_MidRanged</li>
        </weaponTags>
        <stuffProps>
			<categories>
				<li>AS_WHE_CompoundBow_StuffCategory</li>
			</categories>
		</stuffProps>
        <graphicData>
            <texPath>WHE/Weapons/bow/CompoundBow</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <onGroundRandomRotateAngle>30</onGroundRandomRotateAngle>
            <drawSize>1.1</drawSize>
			<drawOffset>0.3,0,0</drawOffset>
        </graphicData>
        <soundInteract>Bow_Large</soundInteract>
        <costList>
            <WoodLog>30</WoodLog>
            <Plasteel>110</Plasteel>
            <Hyperweave>30</Hyperweave>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <statBases>
            <WorkToMake>26500</WorkToMake>
            <Mass>3.5</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.90</AccuracyMedium>
            <AccuracyLong>0.75</AccuracyLong>
            <RangedWeapon_Cooldown>1.05</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
        <li>
            <verbClass>Verb_Shoot</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <defaultProjectile>AS_WHE_CarbonArrow</defaultProjectile>
            <warmupTime>1.0</warmupTime>
            <range>41.5</range>
            <soundCast>Bow_Large</soundCast>
        </li>
        </verbs>
        <tools>
            <li>
                <label>limb</label>
                <capacities>
                <li>Blunt</li>
                <li>Poke</li>
                </capacities>
                <power>10.2</power>
                <cooldownTime>2.3</cooldownTime>
            </li>
        </tools>
        <generateCommonality>0</generateCommonality>
        <recipeMaker>
            <researchPrerequisite>AS_WHE_CompoundBowResearch</researchPrerequisite>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="false">
                <li>ElectricSmithy</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="WHE_BaseWeaponSpacer">
        <defName>WHE_ElvenCompoundBow</defName>
        <label>ASエルブンコンパウンドボウ</label>
        <description>ハーフエルフの技術と、エルフの技術、古代の技術を合わせて作られた大型の半機械弓。コンパウンドボウと比較し、連射性能、飛距離がさらに強化され、命中精度も向上している。</description>
        <weaponTags Inherit="false">
            <li>AS_WHE_Ranged</li>
            <li>AS_WHE_SpacerRanged</li>
            <li>AS_WHE_HighRanged</li>
        </weaponTags>
        <graphicData>
            <texPath>WHE/Weapons/bow/ElvenCompoundBow</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
            <drawSize>1.1</drawSize>
			<drawOffset>0.3,0,0</drawOffset>
        </graphicData>
        <soundInteract>Bow_Large</soundInteract>
        <costStuffCount>1</costStuffCount>
        <stuffCategories>
            <li>AS_WHE_CompoundBow_StuffCategory</li>
            <li>AS_WAE_ElvenBow_StuffCategory</li>
        </stuffCategories>
        <costList>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <statBases>
            <WorkToMake>26500</WorkToMake>
            <Mass>3.7</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.88</AccuracyShort>
            <AccuracyMedium>1.15</AccuracyMedium>
            <AccuracyLong>1.05</AccuracyLong>
            <RangedWeapon_Cooldown>0.92</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
        <li>
            <verbClass>Verb_Shoot</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <defaultProjectile>AS_WHE_ElvenPowerArrow</defaultProjectile>
            <warmupTime>0.95</warmupTime>
            <range>45.5</range>
            <soundCast>Bow_Large</soundCast>
        </li>
        </verbs>
        <tools>
            <li>
                <label>limb</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>11.8</power>
                <cooldownTime>2.1</cooldownTime>
            </li>
        </tools>
        <generateCommonality>0</generateCommonality>
        <recipeMaker>
            <researchPrerequisite>AS_WHE_ElvenCompoundBowResearch</researchPrerequisite>
            <skillRequirements>
                <Crafting>16</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="false">
                <li>FabricationBench</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="BaseProjectileNeolithic">
        <defName>AS_WHE_HalfElvenArrow</defName>
        <label>ハーフエルフ製の矢</label>
        <graphicData>
            <texPath>Things/Projectile/Arrow_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Arrow</damageDef>
            <damageAmountBase>19</damageAmountBase>
            <stoppingPower>1.5</stoppingPower>
            <armorPenetrationBase>0.18</armorPenetrationBase>
            <speed>62</speed>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="BaseProjectileNeolithic">
        <defName>AS_WHE_CarbonArrow</defName>
