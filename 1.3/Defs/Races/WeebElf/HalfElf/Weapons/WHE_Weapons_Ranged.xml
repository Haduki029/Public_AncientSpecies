        <graphicData>
            <texPath>Things/Projectile/Arrow_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Arrow</damageDef>
            <damageAmountBase>26</damageAmountBase>
            <stoppingPower>2.0</stoppingPower>
