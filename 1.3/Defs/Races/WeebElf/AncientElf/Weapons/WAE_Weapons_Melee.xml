    <generateCommonality>0.05</generateCommonality>
    <graphicData>
      <texPath>WHE/Weapons/Melee/AncientElfSword_Reproduction_Drop</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.0</drawSize>
      <drawOffset>(0,0,0)</drawOffset>
    </graphicData>
    <weaponTags Inherit="false">
      <li>AS_WAE_Melee</li>
      <li>AS_WAE_MidMelee</li>
      <li>AS_WAE_MidKnight</li>
      <li>AS_WAE_Sword</li>
      <li>AS_WAE_MidSword</li>
      <li>AS_WAE_HighMelee</li>
    </weaponTags>
    <costStuffCount>150</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Hyperweave>5</Hyperweave>
      <Gold>6</Gold>
      <Plasteel>45</Plasteel>
      <Uranium>40</Uranium>
	  </costList>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>32800</WorkToMake>
      <Mass>3.5</Mass>
      <Flammability>0.01</Flammability>
    </statBases>
    <equippedStatOffsets>
      <MeleeHitChance>0.1</MeleeHitChance>
      <MeleeDodgeChance>0.1</MeleeDodgeChance>
    </equippedStatOffsets>
    <equippedAngleOffset>-65</equippedAngleOffset>
