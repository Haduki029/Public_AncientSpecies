<?xml version='1.0' encoding='utf-8'?>
<Defs>
  <ThingDef Class="AS_WHE.CustomThingDef" ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WAE_HKNationalCostume</defName>
    <description>古代エルフの間で良く見える衣装。エルフ神聖王国ではこの服装が一般的になっている。軽く動きやすい服。</description>
    <label>エルフの民族衣装</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WAE/Apparels/undermiddle/ColonistDressWare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <followStuffColor>false</followStuffColor>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>3500</WorkToMake>
      <Mass>2.5</Mass>
      <StuffEffectMultiplierArmor>0.14</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>4</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
      <Flammability>0.9</Flammability>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>AS_WAE_BasicApparelsResearch</researchPrerequisite>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Waist</li>
		    <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>WAE/Apparels/undermiddle/ColonistDressWare</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <!-- <li>AS_UnderMiddle</li> -->
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <tags>
        <li>AS_WAE_HK_Colonist</li>
        <li>AS_WAE_ServiceSlave</li>
      </tags>
    </apparel>
  </ThingDef>
</Defs>