<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef Name="HAR_Template_Base_Pawn" Abstract="True">
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <hasTooltip>true</hasTooltip>
    <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
    <inspectorTabs>
		<li>ITab_Pawn_Health</li>
		<li>ITab_Pawn_Needs</li>
		<li>ITab_Pawn_Character</li>
		<li>ITab_Pawn_Training</li>
		<li>ITab_Pawn_Social</li>
		<li>ITab_Pawn_Guest</li>
		<li>ITab_Pawn_Prisoner</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">ITab_Pawn_Slave</li>
		<li>ITab_Pawn_FormingCaravan</li>
		<li>ITab_Pawn_Gear</li>
		<li>ITab_Pawn_Log</li>
    </inspectorTabs>
    <comps>
			<li>
				<compClass>CompAttachBase</compClass>
			</li>
    </comps>
    <drawGUIOverlay>true</drawGUIOverlay>
</ThingDef>

<AlienRace.ThingDef_AlienRace ParentName="HAR_Template_Base_Pawn">
    <defName>HAR_Template</defName><!--										■参照するネーム -->
    <label>テンプレ</label><!--												■ゲーム上の名前 -->
    <description>テンプレの種族説明</description><!--						■種族説明 -->
	<alienRace>
        <generalSettings>
			<maleGenderProbability>0.00000001</maleGenderProbability><!--	■男女比率、0にするとバグるので会限りなく低く設定 -->
			<allowHumanBios>true</allowHumanBios>
			<humanRecipeImport>true</humanRecipeImport><!--					■手術対象 -->
			<immuneToXenophobia>false</immuneToXenophobia><!--				■異種族好き/嫌いの影響 -->
			<canLayDown>true</canLayDown>
			<notXenophobistTowards>
				<li>Human</li>
			</notXenophobistTowards>
			<immuneToAge>true</immuneToAge>
			<maxDamageForSocialfight>1</maxDamageForSocialfight><!--		■喧嘩による最大ダメージ -->
			<factionRelations><!--											■↓初期の派閥との関係、この設定ではNPC種族とは同盟関係-->
				<li>
				<factions>
					<li>HAR_Template_Faction_NPC</li>
				</factions>
				<goodwill>
					<min>100</min>
					<max>100</max>
				</goodwill>
				</li>
			</factionRelations>
			<alienPartGenerator><!--■↓表示位置修正、ただし他MODによって無効化されてズレる可能性があるので変更しない方がいいでしょう -->
				<headOffset>(0,0)</headOffset><!--											■頭の位置 -->
				<customDrawSize>(1.00, 1.00)</customDrawSize><!--							■全体描画サイズ -->
				<customHeadDrawSize>(1.00, 1.00)</customHeadDrawSize><!--					■頭の描画サイズ -->
				<customPortraitDrawSize>(1.00, 1.00)</customPortraitDrawSize><!--			■ポートレートの描画サイズ -->
				<customPortraitHeadDrawSize>(1.00, 1.00)</customPortraitHeadDrawSize><!--	■ポートレートの頭の描画サイズ -->
				<colorChannels><!--■↓身体のカラー設定 -->
					<li>
						<name>skin</name>
						<first Class="ColorGenerator_Options">
							<options>
								<li>
									<weight>1</weight>
									<only>RGBA(1,0.99,0.9,1)</only>
								</li>
							</options>
						</first>
					</li>
				</colorChannels>
				<aliencrowntypes><!--■顔の種類、追加したい場合はここに追記する-->
					<li>HAR_T_Head_1</li>
					<li>HAR_T_Head_2</li>
					<li>HAR_T_Head_3</li>
					<li>HAR_T_Head_4</li>
					<li>HAR_T_Head_5</li>
                </aliencrowntypes>
		        <alienbodytypes><!--■体型制御、Femaleしか選ばれないように設定されています-->
					<li>Female</li>
					<!--<li>Fat</li>-->
					<!--<li>Hulk</li>-->
					<!--<li>Thin</li>-->
					<!--<li>Male</li>-->
				</alienbodytypes>
				<useGenderedHeads>false</useGenderedHeads>
				<useGenderedBodies>false</useGenderedBodies>
				
				<bodyAddons><!--■↓種族パーツ-->

				</bodyAddons>
				
            </alienPartGenerator>
        </generalSettings>



		<graphicPaths>
			<li><!--■↓身体画像-->
					<head>HAR_Template/Heads/</head>
  	     			<body>HAR_Template/Bodies/</body>
			</li>
		</graphicPaths>

		<styleSettings><!--■↓1.3移行　HAR側から髪・髭・タトゥーを制御する…らしいが特に影響がないように感じます-->
			<li>
				<key>BeardDef</key>
				<value>
					<hasStyle>true</hasStyle>
				</value>
				<styleTags>
					<li>NoBeard</li>
				</styleTags>
			</li>
			<li>
				<key>HairDef</key>
				<value>
					<hasStyle>true</hasStyle>
					<styleTagsOverride>
						<li>HAR_Template_C_Hair</li>
					</styleTagsOverride>
				</value>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<key>TattooDef</key>
				<value>
					<hasStyle>true</hasStyle>
					<styleTags>
						<li>NoTattoo</li>
					</styleTags>
				</value>
			</li>
		</styleSettings>

		<thoughtSettings>

        </thoughtSettings>
        

		<raceRestriction><!-- ■↓装備関連 -->
			<apparelList><!-- ■↓装備できる服リスト、onlyUseRaceRestrictedApparelをtrueにした場合に使用、装備可能にしたいdefNameを記入する -->
			
			</apparelList>
			
			
			<weaponList><!-- ■↓装備できる武器リスト、onlyUseRaceRestrictedWeaponsをtrueにした場合に使用、装備可能にしたいdefNameを記入する -->
			
			</weaponList>
			<onlyUseRaceRestrictedApparel>false</onlyUseRaceRestrictedApparel><!-- ■服制限、trueにすると許可されたもの以外服を着れなくなる -->
			<onlyUseRaceRestrictedWeapons>false</onlyUseRaceRestrictedWeapons><!-- ■武器制限、trueにすると許可されたもの以外武器を持てなくなる -->
		</raceRestriction>
		<relationSettings><!-- ■↓生成時の家族設定、女性のみの種族なのに父親が生成されないように制限をかけています -->
			<relationChanceModifierLover>0</relationChanceModifierLover>
			<relationChanceModifierExLover>0</relationChanceModifierExLover>
			<relationChanceModifierFiance>0</relationChanceModifierFiance>
			<relationChanceModifierSpouse>0</relationChanceModifierSpouse>
			<relationChanceModifierExSpouse>0</relationChanceModifierExSpouse>
			<relationChanceModifierParent>0</relationChanceModifierParent>
			<relationChanceModifierChild>0</relationChanceModifierChild>
			<relationChanceModifierSibling>0</relationChanceModifierSibling>
		</relationSettings>
    </alienRace>




	<statBases><!-- ■↓テンプレのステータス -->
		<MarketValue>1750</MarketValue><!--						■市場価格、奴隷として基本価格として使われる-->
		<MoveSpeed>4.6</MoveSpeed><!--							■地上移動速度-->
		<Mass>60</Mass><!--										■体重-->
		<Flammability>0.7</Flammability><!--					■燃えやすさ、0にすると燃えなくなる-->
		<ComfyTemperatureMin>16</ComfyTemperatureMin><!--		■快適温度下限-->
		<ComfyTemperatureMax>26</ComfyTemperatureMax><!--		■快適温度上限-->
		<LeatherAmount>75</LeatherAmount><!--					■皮の量-->
		<SocialImpact>1.00</SocialImpact><!--					■社会影響-->
		<PsychicSensitivity>1</PsychicSensitivity><!--			■感受性、0にするとサイコスードなどの影響を受けなくなるがロイヤルティの超能力との相性は悪くなります-->
		<ToxicSensitivity>1</ToxicSensitivity><!--				■死の灰耐性、0にすると毒にならなくなる-->
		<ImmunityGainSpeed>1</ImmunityGainSpeed><!--			■免疫補正、高いと免疫獲得が早くなる-->
		<IncomingDamageFactor>0.95</IncomingDamageFactor><!--	■受けるダメージ倍率、0にすると何もダメージを受けなくなるので注意-->
		<ArmorRating_Blunt>0</ArmorRating_Blunt><!--			■打撃耐性、高いほど攻撃を遮断するが貫通性のある攻撃には無効化される-->
		<ArmorRating_Sharp>0</ArmorRating_Sharp><!--			■刺突耐性、高いほど攻撃を遮断するが貫通性のある攻撃には無効化される-->
		<ArmorRating_Heat>0</ArmorRating_Heat><!--				■熱・火炎耐性、高いほど攻撃を遮断するが貫通性のある攻撃には無効化される-->
		<PainShockThreshold>0.8</PainShockThreshold><!--		■痛み耐性、高すぎると致命傷でもダウンせず死ぬ確率が上がるので注意-->
    </statBases>
	<tools><!--															■↓武器を持っていない場合の攻撃手段、この設定では「left fist」と「right fist」で攻撃します-->
		<li>
			<label>left fist</label><!--								■攻撃の名前-->
			<capacities>
				<li>Blunt</li><!--										■攻撃の属性-->
			</capacities>
			<power>8.2</power><!--										■攻撃の威力-->
			<cooldownTime>2</cooldownTime><!--							■攻撃後のクールタイム-->
			<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup><!--	■依存部位、もげてたりすると使えなくなる-->
			<surpriseAttack><!--										■相手が戦闘体制でない場合に発生、surpriseAttackを除去した場合常時追加ダメージが発生する-->
				<extraMeleeDamages><!--									■追加ダメージ-->
				<li>
					<def>Stun</def><!--									■追加されるDamagesdef-->
					<amount>14</amount><!--								■ダメージの強度-->
				</li>
				</extraMeleeDamages>
			</surpriseAttack>
		</li>
		<li>
			<label>right fist</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>8.2</power>
			<cooldownTime>2</cooldownTime>
			<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
			<surpriseAttack>
				<extraMeleeDamages>
					<li>
						<def>Stun</def>
						<amount>14</amount>
					</li>
				</extraMeleeDamages>
			</surpriseAttack>
		</li>
    </tools>

	<race>
		<thinkTreeMain>Humanlike</thinkTreeMain>
		<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
		<intelligence>Humanlike</intelligence>
		<makesFootprints>true</makesFootprints>
		<lifeExpectancy>100</lifeExpectancy><!--						■寿命-->
		<nameGenerator>NamerPerson_HAR_Template</nameGenerator><!--		■命名規則-->
		<body>HAR_Template_Body</body><!--								■体の部位-->
		<baseBodySize>1</baseBodySize><!--								■身体のサイズ、被命中率や最大積載量に影響する-->
		<baseHealthScale>1</baseHealthScale><!--						■基本HP倍率、高くするととても丈夫になる-->
		<baseHungerRate>1</baseHungerRate><!--							■腹減り倍率、高くすると腹減りやすくなり、0にすると空腹にならなくなる-->
		<gestationPeriodDays>45</gestationPeriodDays><!--				■妊娠期間、バニラでは使用されない-->
		<foodType>OmnivoreHuman</foodType><!--							■食べられるもの-->
		<litterSizeCurve>
			<points>
				<li>(0.5, 0)</li>
				<li>(1, 1)</li>
				<li>(1.01, 0.02)</li>
				<li>(3.5, 0)</li>
			</points>
		</litterSizeCurve>
		<lifeStageAges>
			<li>
				<def>HumanlikeBaby</def>
				<minAge>0</minAge>
			</li>
			<li>
				<def>HumanlikeToddler</def>
				<minAge>1.2</minAge>
			</li>
			<li>
				<def>HumanlikeChild</def>
				<minAge>4</minAge>
			</li>
			<li>
				<def>HumanlikeTeenager</def>
				<minAge>13</minAge>
			</li>
			<li>
				<def>HumanlikeAdult</def>
				<minAge>18</minAge>
			</li>
		</lifeStageAges>
		<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
		<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
		<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
		<specialShadowData>
        <volume>(0.3, 0.8, 0.4)</volume>
        <offset>(0,0,-0.3)</offset>
		</specialShadowData>
		<ageGenerationCurve>
			<points>
				<li>(14,0)</li>
				<li>(16,40)</li>
				<li>(20,50)</li>
				<li>(30,5)</li>
				<li>(100,0)</li>
			</points>
		</ageGenerationCurve>
		<hediffGiverSets>
			<li>OrganicStandard</li>
		</hediffGiverSets>
	</race>
