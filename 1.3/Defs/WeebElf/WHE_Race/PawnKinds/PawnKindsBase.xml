    <invNutrition>2.5</invNutrition>
    <itemQuality>Normal</itemQuality>
    <apparelMoney>200~500</apparelMoney>
    <apparelTags>
      <li>AS_WHE_Neolithic</li>
    </apparelTags>
    <inventoryOptions>
      <skipChance>0.4</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>100</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>100</min>
            <max>200</max>
