<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <PawnKindDef Name="AS_WHE_CommonBase" Abstract="True">
    <race>AS_WHE_Race</race>
    <combatPower>45</combatPower>
    <canBeSapper>true</canBeSapper>
    <baseRecruitDifficulty>0.6</baseRecruitDifficulty>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <apparelAllowHeadgearChance>0.08</apparelAllowHeadgearChance>
    <invNutrition>2</invNutrition>
    <apparelRequired>
      <li>AS_WHE_UnderwearA</li>
      <li>AS_WHE_Neeso</li>
    </apparelRequired>
    <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
    <initialWillRange>3~5</initialWillRange><!--■1.3以降　初期意志範囲-->
		<initialResistanceRange>17~26</initialResistanceRange><!--■1.3以降　初期抵抗範囲-->
		<styleItemTags><!--■1.3以降　初期意志範囲-->
			<li>
				<tag>AS_Hair</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
		</styleItemTags>
  </PawnKindDef>

