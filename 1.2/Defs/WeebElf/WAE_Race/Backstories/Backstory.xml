		<titleShort>エルフの狩人</titleShort>
		<baseDescription>[PAWN_nameDef]は小さなハーフエルの集落に暮らしていた。 [PAWN_pronoun]だ。</baseDescription>
		<slot>Adulthood</slot>
		<skillGains>
			<li>
				<defName>Shooting</defName>
				<amount>4</amount>
			</li>
		</skillGains>
		<!-- 適用する特性 -->
		<forcedTraits>
			<li>
				<defName>ShootingAccuracy</defName>
				<degree>1</degree>
				<chance>20</chance>
			</li>
		</forcedTraits>
		<spawnCategories>
			<li>AS_WAE_Village_Story</li>
			<li>AS_WAE_Colonist</li>
			<li>AS_WAE_Hunter</li>
		</spawnCategories>
	</AlienRace.BackstoryDef>

