<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Marine Armor -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_MarineArmor</defName>
    <description>ハーフエルフ式の高い強度を持つ高性能アーマーです。</description>
    <label>ハーフエルフ式マリーンアーマー</label>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/MarineArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>90</Plasteel>
      <Uranium>15</Uranium>
    </costList>
    <statBases>
      <MaxHitPoints>360</MaxHitPoints>
      <WorkToMake>65000</WorkToMake>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.83</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.18</ArmorRating_Sharp>
      <ArmorRating_Heat>0.84</ArmorRating_Heat>
      <Insulation_Cold>32</Insulation_Cold>
      <Insulation_Heat>32</Insulation_Heat>
      <EquipDelay>11</EquipDelay>
      <Flammability>0.01</Flammability>
    </statBases>
    <tradeTags><li>AS_WHE_HiTechArmor</li></tradeTags>
    <equippedStatOffsets>
			<MoveSpeed>0.08</MoveSpeed>
      <WorkSpeedGlobal>-0.03</WorkSpeedGlobal>
		</equippedStatOffsets>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Spacer</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>14</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/MarineArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>AS_WHE_Army</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- Pressure Resistant suits -->
  <ThingDef ParentName="AS_WHE_ArmorMachineableBase">
    <defName>AS_WHE_PressureResistantSuits</defName>
    <label>耐圧スーツ</label>
    <description>宇宙空間でも行動できるように、高度な技術で作成されたスーツ。マリーン装備より若干弱いが、耐熱、耐寒性能が高い。</description>
    <graphicData>
      <texPath>WHE/Apparels/middle/PressureResistantSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <ComponentSpacer>6</ComponentSpacer>
      <Hyperweave>30</Hyperweave>
      <Plasteel>80</Plasteel>
      <Uranium>25</Uranium>
    </costList>
		<generateCommonality>0</generateCommonality>
    <statBases>
      <WorkToMake>74000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>18</Mass>
      <ArmorRating_Blunt>0.93</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.08</ArmorRating_Sharp>
      <ArmorRating_Heat>0.98</ArmorRating_Heat>
      <Insulation_Cold>100</Insulation_Cold>
      <Insulation_Heat>54</Insulation_Heat>
      <Flammability>0.01</Flammability>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.1</MoveSpeed>
      <WorkSpeedGlobal>-0.03</WorkSpeedGlobal>
    </equippedStatOffsets>
    <tradeTags><li>AS_WHE_HiTechArmor</li></tradeTags>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Spacer</researchPrerequisite>
      <skillRequirements>
        <Crafting>16</Crafting>
      </skillRequirements>
    </recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>WHE/Apparels/middle/PressureResistantSuit</wornGraphicPath>
			<layers>
				<li>Shell</li>
        <li>Middle</li>
			</layers>
			<tags>
        <li>AS_WHE_Spacer</li>
        <li>AS_WHE_EVA</li>
      </tags>
      <defaultOutfitTags>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- Plate Armor -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_PlateArmor</defName>
    <description>金属で作られたハーフエルフ式のプレートアーマー。首、胴体、肩、腕を守ってくれ、非常に丈夫だが、若干重い。</description>
    <label>ハーフエルフ式プレートアーマー</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/PlateArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>30</Cloth>
    </costList>
    <costStuffCount>190</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>320</MaxHitPoints>
      <WorkToMake>40000</WorkToMake>
      <Mass>8.5</Mass>
      <StuffEffectMultiplierArmor>0.82</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
      <Flammability>0.2</Flammability>
    </statBases>
    <equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
			<WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
		</equippedStatOffsets>
     <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Intermediate</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/PlateArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier4</li>
		    <li>RoyalTier5</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  
  <!-- Ancient Elven Armor Reproduction -->
  <ThingDef ParentName="AS_WHE_ApparelNoColorBase">
    <defName>AS_WHE_WAEArmor_Re</defName>
    <description>ハーフエルフの技術で再現された、古代エルフのプレートアーマーのレプリカ。ウラニウムが用いられており、全体的に黒い仕上がりになっている。高い防御力を誇るだけでなく、着用者の近接戦闘能力を高めてくれる効果がある。</description>
    <label>古代エルフのプレートアーマー</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/AncientElfArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <generateCommonality>0</generateCommonality>
    <costList>
      <ComponentSpacer>3</ComponentSpacer>
      <Hyperweave>30</Hyperweave>
      <Gold>20</Gold>
      <Plasteel>100</Plasteel>
      <Uranium>25</Uranium>
    </costList>
    <statBases>
	    <MaxHitPoints>420</MaxHitPoints>
      <WorkToMake>58000</WorkToMake>
      <MarketValue>18000</MarketValue>
      <Mass>10</Mass>
      <ArmorRating_Blunt>0.88</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.31</ArmorRating_Sharp>
      <ArmorRating_Heat>0.68</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
	    <Insulation_Heat>45</Insulation_Heat>
      <Beauty>0.2</Beauty>
      <EquipDelay>18</EquipDelay>
      <Flammability>-1</Flammability>
    </statBases>
    <equippedStatOffsets>
	    <MoveSpeed>0.2</MoveSpeed>
	    <MeleeHitChance>0.8</MeleeHitChance>
      <MeleeDodgeChance>0.5</MeleeDodgeChance>
      <Flammability>-1</Flammability>
      <ForagedNutritionPerDay>0.25</ForagedNutritionPerDay>
      <MentalBreakThreshold>0.05</MentalBreakThreshold>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
     <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Spacer</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
			  <li>Torso</li>
			  <li>Shoulders</li>
		    <li>Arms</li>
			  <li>Legs</li>
			  <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/AncientElfArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
		    <li>RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <modExtensions>
      <li Class="AS_WHE.LimitApparel">
        <matchBodyType>
            <!-- 複数指定可。以下のいずれかに該当する体型であれば着用できる。 -->
            <li>Male</li>
            <!-- <li>Female</li> -->
            <li>Thin</li>
            <li>Hulk</li>
        </matchBodyType>
      </li>
	  </modExtensions>
  </ThingDef>
</Defs>