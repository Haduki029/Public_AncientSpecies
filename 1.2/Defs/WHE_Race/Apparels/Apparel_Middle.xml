<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 防弾ベスト -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_BulletProofVest</defName>
    <description>スチールと布で作られたシンプルな防弾ベスト。</description>
    <label>防弾ベスト（ハーフエルフ）</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/BulletProofVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <Cloth>10</Cloth>
      <Steel>20</Steel>
    </costList>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8500</WorkToMake>
      <Mass>2</Mass>
      <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.20</ArmorRating_Heat>
      <Insulation_Cold>15.4</Insulation_Cold>
      <Insulation_Heat>4.5</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>CraftingSpot</li>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>AS_WHE_Apparel_Elementary</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/BulletProofVest</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <tradeTags><li>AS_WHE_Apparel_Tradable</li></tradeTags>
  </ThingDef>

  <!-- Plate Armor -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_PlateArmor</defName>
    <description>金属で作られたハーフエルフ式のプレートアーマー。首、胴体、肩、腕を守ってくれ、非常に丈夫だが、若干重い。</description>
    <label>ハーフエルフ式プレートアーマー</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/PlateArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>30</Cloth>
    </costList>
    <costStuffCount>190</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>320</MaxHitPoints>
      <WorkToMake>40000</WorkToMake>
      <Mass>8.5</Mass>
      <StuffEffectMultiplierArmor>0.82</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
      <Flammability>0.2</Flammability>
    </statBases>
    <equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
			<WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
		</equippedStatOffsets>
     <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Intermediate</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/PlateArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier4</li>
		    <li>RoyalTier5</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  
  <!-- Ancient Elven Armor Reproduction -->
  <ThingDef ParentName="AS_WHE_ApparelNoColorBase">
    <defName>AS_WHE_WAEArmor_Re</defName>
    <description>ハーフエルフの技術で再現された、古代エルフのプレートアーマーのレプリカ。ウラニウムが用いられており、全体的に黒い仕上がりになっている。高い防御力を誇るだけでなく、着用者の近接戦闘能力を高めてくれる効果がある。</description>
    <label>古代エルフのプレートアーマー</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/AncientElfArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <generateCommonality>0</generateCommonality>
    <costList>
      <ComponentSpacer>3</ComponentSpacer>
      <Hyperweave>30</Hyperweave>
      <Gold>20</Gold>
      <Plasteel>100</Plasteel>
      <Uranium>25</Uranium>
    </costList>
    <statBases>
	    <MaxHitPoints>420</MaxHitPoints>
      <WorkToMake>58000</WorkToMake>
      <MarketValue>18000</MarketValue>
      <Mass>10</Mass>
      <ArmorRating_Blunt>0.88</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.31</ArmorRating_Sharp>
      <ArmorRating_Heat>0.68</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
	    <Insulation_Heat>45</Insulation_Heat>
      <Beauty>0.2</Beauty>
      <EquipDelay>18</EquipDelay>
      <Flammability>-1</Flammability>
    </statBases>
    <equippedStatOffsets>
	    <MoveSpeed>0.2</MoveSpeed>
	    <MeleeHitChance>0.8</MeleeHitChance>
      <MeleeDodgeChance>0.5</MeleeDodgeChance>
      <Flammability>-1</Flammability>
      <ForagedNutritionPerDay>0.25</ForagedNutritionPerDay>
      <MentalBreakThreshold>0.05</MentalBreakThreshold>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
     <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Spacer</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
			  <li>Torso</li>
			  <li>Shoulders</li>
		    <li>Arms</li>
			  <li>Legs</li>
			  <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/AncientElfArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
		    <li>RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <modExtensions>
      <li Class="AS_WHE.LimitApparel">
        <matchBodyType>
            <!-- 複数指定可。以下のいずれかに該当する体型であれば着用できる。 -->
            <li>Male</li>
            <!-- <li>Female</li> -->
            <li>Thin</li>
            <li>Hulk</li>
        </matchBodyType>
      </li>
	  </modExtensions>
  </ThingDef>
</Defs>